<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="greg.MainWindow">

    <children>
        <VBox prefHeight="600.0" prefWidth="400.0" AnchorPane.topAnchor="0.0"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

            <ScrollPane fx:id="scrollPane" fitToWidth="true" VBox.vgrow="ALWAYS">
                <content>
                    <VBox fx:id="dialogContainer" spacing="10.0">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                    </VBox>
                </content>
            </ScrollPane>

            <HBox spacing="10.0">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <TextField fx:id="userInput" HBox.hgrow="ALWAYS" onAction="#handleUserInput"/>
                <Button text="Send" onAction="#handleUserInput"/>
            </HBox>

        </VBox>
    </children>
</AnchorPane>